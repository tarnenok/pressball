<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sharkeva.pressball"
    android:versionCode="4"
    android:versionName="0.3.1"
    >
    <uses-permission android:name="android.permission.INTERNET" />
    <application

        android:allowBackup="true"
        android:icon="@drawable/pressball_ico"
        android:label="@string/app_name"
        android:theme="@style/Theme.Pressball" >
        <activity
            android:name="com.sharkeva.pressball.ui.activity.MainActivity"
            android:launchMode="singleTop"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sharkeva.pressball.ui.activity.NewsActivity"
            android:label="@string/title_activity_news"
            android:parentActivityName="com.sharkeva.pressball.ui.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sharkeva.pressball.ui.activity.MainActivity"/>
        <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN" />-->
            <!--<category android:name="android.intent.category.LAUNCHER" />-->
        <!--</intent-filter>-->
        </activity>
    </application>

</manifest>
