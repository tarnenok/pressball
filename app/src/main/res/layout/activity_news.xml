<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsActivity">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textColor">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
                android:id="@+id/scrollview_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:textSize="@dimen/news_title"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:gravity="center"/>
                <LinearLayout
                        android:id="@+id/main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:id="@+id/main_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            />
                        <TextView
                            android:id="@+id/comments_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:text="@string/comments"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"/>
                        <com.gc.materialdesign.views.ButtonFlat
                            android:id="@+id/comments_update"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@color/pressballColor"
                            android:text="@string/update"
                            android:textSize="42dp"/>
                        <com.gc.materialdesign.views.ProgressBarIndeterminateDeterminate
                            android:id="@+id/comments_progress_bar"
                            android:layout_width="fill_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="8dp"
                            android:background="@color/pressballColor"
                            android:visibility="invisible"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/news_comments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    <include layout="@layout/spinner_small"/>
                    </LinearLayout>
                </LinearLayout>
            </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
            <include layout="@layout/spinner"/>
        </RelativeLayout>
        <include layout="@layout/navigation"/>
    </android.support.v4.widget.DrawerLayout>
    <include layout="@layout/toolbar"/>
</FrameLayout>

